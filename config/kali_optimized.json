{
  "_comment": "Configuración específica optimizada para Kali Linux",
  "kali_optimized": true,
  
  "network": {
    "default_user_agent": "SLAYER-Kali-LoadTester/4.0 (Kali Linux)",
    "max_concurrent_connections": 100,
    "default_timeout": 30,
    "connection_pool_size": 50,
    "enable_http2": true,
    "enable_compression": true
  },
  
  "security": {
    "require_authorization": true,
    "enable_rate_limiting": true,
    "max_rps_without_auth": 10,
    "max_rps_with_auth": 1000,
    "enable_ssrf_protection": true,
    "verify_ssl": true,
    "allowed_schemes": ["http", "https"],
    "blocked_domains": ["localhost", "127.0.0.1", "::1"],
    "ethical_mode": true
  },
  
  "throttling": {
    "adaptive_throttling": true,
    "backoff_strategy": "adaptive",
    "error_rate_threshold": 5.0,
    "response_time_threshold": 3000,
    "circuit_breaker_enabled": true,
    "emergency_stop_threshold": 50.0
  },
  
  "monitoring": {
    "enable_dashboard": true,
    "dashboard_host": "0.0.0.0",
    "dashboard_port": 8080,
    "metrics_interval": 5,
    "enable_prometheus": true,
    "prometheus_port": 8081
  },
  
  "caching": {
    "enable_redis": true,
    "redis_host": "127.0.0.1",
    "redis_port": 6379,
    "redis_db": 0,
    "cache_ttl": 3600,
    "enable_memory_cache": true
  },
  
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "file": "/var/log/slayer/kali.log",
    "max_size_mb": 100,
    "backup_count": 5,
    "enable_audit_log": true,
    "audit_log_file": "/var/log/slayer/audit.log"
  },
  
  "pentesting_integration": {
    "nmap_integration": true,
    "burp_suite_compatible": true,
    "export_formats": ["json", "csv", "xml"],
    "metasploit_integration": false,
    "owasp_zap_integration": true
  },
  
  "performance": {
    "enable_async": true,
    "worker_threads": 4,
    "request_queue_size": 1000,
    "enable_connection_pooling": true,
    "pool_max_size": 100,
    "enable_keep_alive": true
  },
  
  "reporting": {
    "auto_generate_reports": true,
    "report_format": "json",
    "include_screenshots": false,
    "include_response_bodies": false,
    "max_response_size": 1048576,
    "report_directory": "/home/kali/slayer_reports"
  },
  
  "profiles": {
    "default": {
      "name": "Default Kali Profile",
      "rps": 50,
      "duration": 60,
      "pattern": "constant"
    },
    "light": {
      "name": "Light Load Test",
      "rps": 10,
      "duration": 30,
      "pattern": "constant"
    },
    "moderate": {
      "name": "Moderate Load Test", 
      "rps": 100,
      "duration": 300,
      "pattern": "ramp_up"
    },
    "stress": {
      "name": "Stress Test",
      "rps": 500,
      "duration": 600,
      "pattern": "burst"
    }
  },
  
  "compliance": {
    "respect_robots_txt": true,
    "max_test_duration": 3600,
    "require_confirmation_high_load": true,
    "auto_stop_on_high_error_rate": true,
    "compliance_logging": true
  }
}